ul(class="elements-tree")
  li(class="tree-element" ng-repeat="el in tree track by $index" ng-show="active === $index || active === -1" ng-click="activateDeactivate($event, $index)")
    span(ng-show="el.children")
      span(class="glyphicon glyphicon-minus" ng-show="el.children && active >= 0" )
      span(class="glyphicon glyphicon-plus" ng-hide="active >= 0")
    p {{el.name}}
    button(class="btn change-area" ng-click="changeArea($event, el)")
      span.glyphicon.glyphicon-arrow-right 
    span(ng-include="'area/tree/tree-rec.dir.html'")