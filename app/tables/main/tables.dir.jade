h4
  strong Statystyka

.table-responsive
  table(st-table="stats" class="table table-striped table-sample ")
    thead
      tr
        th Uprawnionych do głosowania
        th Frekwencja
        th Kart wydanych
        th Gł. oddanych
        th Gł. ważnych
        th Gł. nieważnych
        th Gł. ważnych (%)

    tbody
      tr
        td {{stats.geography.number_of_voters}}
        td {{stats.geography.attendance_p + '%'}}
        td {{stats.geography.cards_given}}
        td {{stats.geography.cards_valid}}
        td {{stats.geography.votes_valid}}
        td {{stats.geography.votes_invalid}}
        td {{stats.geography.votes_valid_p + '%'}}

h4 
  strong Wyniki komitetów:

.table-responsive
  table(st-table="stats.votes" class="table table-striped table-sample")
    thead
        tr
          th Komitet
          th Liczba głosów
          th Głosów (%)
      tbody
        tr(ng-repeat="v in stats.votes| orderBy: '-amount'")
          td {{v.political_party}}
          td {{v.amount}}
          td {{v.percentage + '%'}}

div(ng-if="stats.candidates" id="candidates" st-table="stats.candidates" st-safe-src="rawCandidates")
  h4 
    strong Wyniki kandydatów:
  
  .table-responsive
    table(class="table table-striped")
      thead
        tr
          th(st-sort="surname" class="sorter") Nazwisko
          th(st-sort="names" class="sorter") Imiona
          th(st-sort="age" class="sorter") Wiek
          th Miejsce Zam.
          th(st-sort="sex" class="sorter") Płeć
          th(st-sort="votes" class="sorter") Głosy
          th(st-sort="surname" class="sorter") Komitet
          th(st-sort="number_of_list" class="sorter") Lista
          th(st-sort="pos" class="sorter") Nr na liscie
          th(st-sort="number_of_district" class="sorter") Okręg.
          th Mandat
        tr
          th(colspan="6")
            input(placeholder="Znajdz kandydata" st-search="" type="text")

          th
            input(placeholder="Komitet Wyborczy" st-search="election_committee" type="text")
          th
          th
          th
          th
            select(st-search="mandate" class="dropdown-select-btn")
              option(value="") Wszyscy
              option(value="t") Tak
              option(value="n") Nie
      tbody()
        tr(ng-repeat="c in stats.candidates")
          td {{c.surname}}
          td {{c.names}}
          td {{c.age}}
          td {{c.place_of_living}}
          td {{c.sex}}
          td {{c.votes}}
          td {{c.election_committee}}
          td {{c.number_of_list}}
          td {{c.pos}}
          td {{c.number_of_district}}
          td {{c.mandate === 't'? 'Tak' : 'Nie'}}
    
  div.text-center
    div(st-pagination st-items-by-page="30" st-displayed-pages="15")
